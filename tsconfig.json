{
  "compilerOptions": {
    "noEmit": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "lib": ["esnext", "dom"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "incremental": true,
    "checkJs": true,
    "noUncheckedIndexedAccess": true
  },
  "exclude": ["node_modules"]
}
